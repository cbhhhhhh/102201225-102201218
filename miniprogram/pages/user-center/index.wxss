/* pages/me/index.wxss */

.page_container {
  background-color: #f5f5f5;
  height: 100vh;
  font-family: PingFang SC;
}

.top_bg {
  height: 120rpx;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  position: relative;
  padding-top: 60rpx; /* 增加内边距以适应头像和用户信息 */
}

.userinfo_container {
  display: flex;
  flex-direction: column;
  align-items: center; /* 确保 .user_info 居中 */
  gap: 20rpx;
  padding: 0 60rpx;
  margin-bottom: 40rpx;
  position: relative; /* 为编辑按钮定位做准备 */
}

.avatar {
  width: 200rpx; /* 增大头像尺寸 */
  height: 160rpx;
  border-radius: 50%;
  transform: scale(1.0);
  margin-top: -20rpx; /* 向上移动头像 */
}

.user_info {
  width: 100%;
  max-width: 600rpx; /* 设置最大宽度，防止占满整个容器 */
  text-align: left; /* 左对齐文本 */
  padding: 0 30rpx; /* 增加内边距，向右移动内容 */
}

.username {
  display: block; /* 每个标签独占一行 */
  text-align: center; /* 姓名居中 */
  color: rgba(0, 0, 0, 0.9);
  font-size: 40rpx; /* 增大字体 */
  margin-top: 0rpx; /* 去除顶部间距 */
  margin-bottom: 30rpx; /* 增大姓名与其他信息的间距 */
  font-weight: bold;
  word-wrap: break-word; /* 启用换行 */
  white-space: normal; /* 确保文本可以换行 */
}

.studentId,
.education,
.major,
.grade,
.college,
.phone,
.email {
  display: block; /* 每个标签独占一行 */
  color: rgba(0, 0, 0, 0.7);
  font-size: 32rpx; /* 增大字体 */
  margin-top: 10rpx; /* 调整间距 */
  font-weight: normal; /* 只让姓名加粗 */
  word-wrap: break-word; /* 启用换行 */
  white-space: normal; /* 确保文本可以换行 */
}

.edit_button {
  position: absolute;
  top: 0rpx; /* 调整位置，使其与头像重叠或在头像旁边 */
  right: 20rpx; /* 距离右边缘 20rpx */
  display: flex;
  align-items: center;
  gap: 5rpx;
  background-color: rgba(0, 0, 0, 0.05); /* 背景色可选 */
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  cursor: pointer;
}

.edit_icon {
  width: 30rpx;
  height: 30rpx;
}

.edit_text {
  color: rgba(0, 0, 0, 0.7);
  font-size: 28rpx;
}

.settings_container {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
}

.left {
  display: flex;
  align-items: center;
  gap: 10rpx; /* 调整图标与文本之间的间距 */
}

.setting_icon {
  width: 40rpx;
  height: 40rpx;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
}
