/* pages/home/home.wxss */

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
}

/* Slogan 图片样式 */
.slogan-image {
  width: 100%;
  height: 25vh; /* 高度占界面四分之一 */
  margin-top: 30rpx;
  margin-left: 10rpx;
  margin-right: 60rpx;
  margin-bottom: 90rpx;
}

/* 按钮组样式 */
.button-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 按钮样式 */
.home-button {
  width: 500rpx; /* 固定长度 */
  height: 80rpx;
  margin-bottom: 30rpx;
  background-color:#ffffff ; /* 白底 */
  color: #8B0000; /* 深红色字体 */
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  line-height: 45rpx;
  border: 2rpx solid #8B0000; /* 深红色方框 */
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.3); /* 斜向右下侧的阴影 */
}
