/* pages/first/first.wxss */
/* 设置页面主容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  justify-content: space-between;
  background-color: #f5f5f5;
}

.search-bar-container {
  display: flex;
  justify-content: flex-start; /* 从左侧对齐 */
  padding: 10px;
  width: 100%;
}

.search-bar {
  width: 80%; /* 宽度占据80% */
  padding: 8px;
  border: 1px solid #ccc; /* 边框颜色 */
  border-radius: 20px; /* 圆角 */
  font-size: 16px; /* 字体大小 */
  background-color: #f8f8f8; /* 背景颜色 */
}


/* 页面内容区域 */
.content {
  padding-bottom: 25vh; /* 给内容区域增加下方的 padding，避免被底部滚动区域覆盖 */
}

/* 底部滚动区域 */
.bottom-scroll {
  position: fixed;
  bottom: 0;
  width: 100%; /* 占满整个页面宽度 */
  height: 80vh; /* 占页面高度的四分之一 */
  display: flex;
  background-color: #ffffff;
  gap: 10px; /* 设置块之间的间隙为10px */

}

/* 滚动区域内的块 */
.scroll-item {
  width: 100%;
  height: 150px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #a1a7a1;
  color: white;
  margin-right: 10px;
  font-size: 16px;
  border-radius: 8px;
}
