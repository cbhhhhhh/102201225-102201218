/* pages/ProjectDetail_Modify/ProjectDetail_Modify.wxss */
.project-detail {
  padding: 20rpx;
}

.project-image {
  width: 100%;
  height: 400rpx;
}

.project-header {
  margin-top: 20rpx;
}

.project-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.project-title {
  font-size: 50rpx;
  font-weight: bold;
  color: #333;
}

.project-type {
  font-size: 48rpx;
  font-weight: bold;
  color: #8B0000;
  text-align: right;
}

.project-time-container {
  margin-top: 10rpx;
}

.project-time-label {
  font-size: 30rpx;
  color: #666;
}

.project-time {
  font-size: 30rpx;
  color: #666;
  margin-top: 5rpx;
}

.project-middle {
  margin-top: 30rpx;
}

.section-title-container {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  padding-bottom: 5rpx;
  margin-bottom: 10rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.keyword-list {
  display: flex;
  flex-wrap: wrap;
}

.keyword-item {
  background-color: #8B0000;
  border-radius: 20rpx;
  padding: 10rpx 25rpx;
  margin-right: 10rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #fff;
}

.restriction-item {
  margin-top: 10rpx;
}

.restriction-label {
  font-size: 30rpx;
  color: #666;
}

.restriction-text {
  font-size: 30rpx;
  color: #666;
  margin-left: 20rpx;
}

.signup-item {
  margin-top: 10rpx;
}

.signup-label {
  font-size: 30rpx;
  color: #666;
}

.signup-numbers {
  font-size: 30rpx;
  color: #666;
  margin-left: 2rpx;
}

.project-description {
  margin-top: 30rpx;
}

.description-text {
  font-size: 30rpx;
  color: #666;
  line-height: 40rpx;
  margin-top: 10rpx;
  word-break: break-word; /* 确保长文本能够换行 */
}

.project-signup {
  margin-top: 30rpx; /* 增加上边距 */
}

/* 操作按钮样式 */
.button-group {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}

.delete-button, .modify-button {
  width: 40%;
  height: 90rpx;
  border-radius: 40rpx;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
}

.delete-button {
  background-color: #ff4d4d; /* 红色 */
}

.modify-button {
  background-color: #4CAF50; /* 绿色 */
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal {
  width: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.modal-header {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.modal-footer {
  display: flex;
  justify-content: space-around;
}

.modal-btn {
  width: 40%;
  padding: 10rpx 0;
  border-radius: 10rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 28rpx;
}

.modal-btn.cancel {
  background-color: #8e8e93;
}
